// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "webpack-dev",
			"problemMatcher": {
				"owner": "Webpack (Dev, Continuous)",
				"severity": "error",
				"fileLocation": "absolute",
				"source": "webpack-typescript",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "webpack is watching the filesâ€¦",
					"endsPattern": "Time: (\\d+)ms"
				},
				"pattern": [
					{
						"regexp": "ERROR in ([^\\(]*)\\((\\d+),(\\d+)\\):",
						"file": 1,
						"line": 2,
						"column": 3
					},
					{
						"regexp": "([A-Za-z0-9-]+):(.*)",
						"message": 2,
						"code": 1
					}
				]
			},

			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
